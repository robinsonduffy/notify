-if can? :view, :protected_content
  %div#home-button
    %li= link_to("Home", root_path)
%div#user-tools
  - if can? :view, :protected_content
    %li= (current_user.name.blank?) ? current_user.username : current_user.name
    %li= link_to("Logout", logout_path, :method => :delete)
  - else
    %li= link_to("Login", login_path)
  - if can? :manage, User
    %li= link_to("Users", users_path)